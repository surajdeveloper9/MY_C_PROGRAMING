// matrix addition
#include <stdio.h>
int main() {
    int row ,col;
    printf("enter the value of row \nand col\n");
    scanf("%d%d",&row,&col);
    int a[row][col],b[row][col],sum[row][col];
    printf("enter the elements of matrix A\n");
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            scanf("%d",&a[i][j]);
        }
    }
        printf("enter the elements of matrix B\n");
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
         scanf("%d",&b[i][j]);
                }
    }
        for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            sum[i][j]=a[i][j]+b[i][j];
        }
        }
                printf("result of matrix \n");
    for(int i=0;i<row;i++){
        for(int j=0;j<col;j++){
            printf("%d\t",sum[i][j]);
}
printf("\n");
}
}


